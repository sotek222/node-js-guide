<body>
  <%- include('../partials/navigation.ejs')%>
  <h1>Orders Page:</h1>
  <%if(orders.length) {%>
    <ul>
      <%for(const order of orders){%>
        <li>
          <h1># <%= order.id%></h1>
          <ul>
            <%order.products.forEach(({ title, price, orderItem: { quantity  }}) => { %>
              <li>
                <p><%= title %> $<%= price %> X <%= quantity %> </p>
              </li>
            <% });%>
          </ul>
        </li>
        <h2>Total Cost: $<%= order.totalPrice %></h2>
      <%};%>
    </ul>
  <%} else {%>
    <h1>No Orders</h1>
  <%};%>
  <%- include('../partials/end.ejs')%>
